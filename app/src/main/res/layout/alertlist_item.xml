<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/round_white_button">
    
    <TextView
        android:id="@+id/friendalert_list_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/friendalert_list_reject_button"
        />
    
    <Button
        android:id="@+id/friendalert_list_reject_button"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:text="거절"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/friendalert_list_accept_button"
        android:background="@drawable/round_red_button"
        />

    <Button
        android:id="@+id/friendalert_list_accept_button"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:text="승인"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_green_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>